<p>Update information below</p>
<form method="post" action="/students/<%= @student.id%>">
  <label for="first-name">First Name:</label>
  <input id="first-name" type="text" value="<%= @student.first_name%>" name="first_name" />

  <label for="last-name">Last Name:</label>
  <input id="last-name" type="text" value="<%= @student.second_name%>" name="second_name"/>

  <label for="house-select">Select a house:</label>
  <select id="house-select" name="house">

    <% @houses.each do |house| %>
    <option value=<%= house.id %>><%= house.name.capitalize %></option>
    <% end %>

  </select>

  <label for="age">Age:</label>
  <input id="age" type="number" name="age" value="<%= @student.age%>"/>

  <input type="submit" value="Update student record"/>
</form>
